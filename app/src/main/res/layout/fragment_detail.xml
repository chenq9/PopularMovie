<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovie.DetailActivityFragment">

    <TextView
        android:id="@+id/name"
        android:textSize="@dimen/detail_text_large"
        android:padding="@dimen/detail_title_padding"
        android:background="@color/detail_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageThumb"
        android:layout_width="@dimen/image_item_width"
        android:layout_height="@dimen/image_item_height"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/detail_layout_margin"
        android:layout_marginTop="@dimen/detail_layout_margin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toRightOf="@+id/imageThumb"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/detail_layout_margin"
        android:layout_marginTop="@dimen/detail_layout_margin">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_LinearLayout_space"
            android:textSize="@dimen/detail_text_large"/>

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_LinearLayout_space"
            android:textSize="@dimen/detail_text_mid"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageThumb"
        android:layout_marginTop="@dimen/detail_layout_margin"
        android:layout_marginLeft="@dimen/detail_layout_margin" />

</RelativeLayout>
